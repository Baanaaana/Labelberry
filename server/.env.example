# ==========================================
# LabelBerry Server Configuration Example
# Copy this file to .env and update values
# ==========================================

# Database Configuration
# For PostgreSQL (e.g., Neon, Supabase, local PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8080
DEBUG=false
ENABLE_DOCS=true
STATIC_VERSION=1.0

# Local mode (set to true to disable MQTT for development)
# When true, the server runs without MQTT connection
# MQTT settings are managed through the web interface and stored in database
LABELBERRY_LOCAL_MODE=false

# Next.js Frontend Configuration
# In production with reverse proxy (e.g., Nginx), use relative paths:
# API will be available at https://yourdomain.com/api
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_WS_URL=/api

# For local development without proxy, use:
# NEXT_PUBLIC_API_URL=http://localhost:8080
# NEXT_PUBLIC_WS_URL=ws://localhost:8080

# NextAuth Configuration
# Update to your actual domain in production
NEXTAUTH_URL=https://yourdomain.com
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl

# Node Environment
NODE_ENV=production